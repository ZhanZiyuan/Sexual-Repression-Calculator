{
    "version": 3,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/**/*.ts",
            "use": "@vercel/deno-edge"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/$1.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}